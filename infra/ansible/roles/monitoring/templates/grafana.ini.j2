[dashboards]
min_refresh_interval = 1s

[database]
# Avoid SQLite lock contention in dev/testnet stacks (Docker Desktop can be flaky).
high_availability = false
cache_mode = private
wal = true
query_retries = 5
transaction_retries = 10

[security]
admin_user = admin
admin_password = admin

[server]
http_addr = {{ loadnet_grafana_bind | default('0.0.0.0') }}
http_port = {{ loadnet_grafana_port | default(3000) }}
